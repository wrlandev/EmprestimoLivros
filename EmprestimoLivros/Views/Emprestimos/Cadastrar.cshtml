@model EmprestimosModel
@{
	ViewData["title"] = "Cadastrar Empréstimo";
}

<div class="container bg-dark p-5 rounded-5">
	<div class="mb-5 text-center">
		<h1 class="text-light">Cadastro de Empréstimo</h1>
	</div>
	<form asp-action="Cadastrar" method="post">
		<div class="form-group">
			<label for="Recebedor" class="form-label text-light">Recebedor:</label>
			<input type="text" class="form-control text-white" asp-for="Recebedor" id="Recebedor" placeholder="Quem está recebendo?">
			<span class="text-danger" asp-validation-for="Recebedor"></span>
		</div>

		<div class="form-group">
			<label for="Fornecedor" class="form-label text-light">Fornecedor:</label>
			<input type="text" class="form-control text-white" asp-for="Fornecedor" id="Fornecedor" placeholder="Quem está emprestando? ">
			<span class="text-danger" asp-validation-for="Fornecedor"></span>
		</div>

		<div class="form-group">
			<label for="Livro" class="form-label text-light">Livro:</label>
			<input type="text" class="form-control text-white" asp-for="LivroEmprestado" id="Livro" placeholder="Qual e o livro?">
			<span class="text-danger" asp-validation-for="LivroEmprestado"></span>
		</div>
		<div class="d-flex gap-5 mt-5">
			<button type="submit" class="btn btn-success w-50">Adicionar</button>
			<a class="btn btn-primary w-50" asp-action="Index">Voltar</a>
		</div>
	</form>
</div>