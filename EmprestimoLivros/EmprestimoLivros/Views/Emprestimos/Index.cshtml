@model IEnumerable<EmprestimoLivros.Models.EmprestimosModel>

@{
	ViewData["title"] = "Empréstimos";
}

<div class="container">
	<div class="d-flex justify-content-between align-items-center mb-5">
		<h1>Empréstimos</h1>
		<a class="btn btn-success mx-2" asp-action="Cadastrar">Cadastrar novo empréstimo</a>
	</div>
</div>

<div style="overflow-x: auto">
	<table class="table table-dark table-hover">
		<thead>
			<tr>
				<th scope="col">Recebedor</th>
				<th scope="col">Fornecedor</th>
				<th scope="col">Livro</th>
				<th scope="col">última atualização</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			@if (Model != null)
			{
				foreach (var item in Model)
				{
					<tr>
						<th scope="row">@item.Recebedor</th>
						<td>@item.Fornecedor</td>
						<td>@item.LivroEmprestado</td>
						<td>@item.dataAtualizacao</td>
						<td>
							<a asp-action="Editar" asp-route-id="@item.Id" class="btn btn-warning mx-2">Editar</a>
							<a asp-action="Excluir" asp-route-id="@item.Id" class="btn btn-danger mx-2">Excluir</a>
						</td>
					</tr>
				}
			}
		</tbody>
	</table>
</div>
